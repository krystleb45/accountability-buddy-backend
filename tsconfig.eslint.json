{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest.setup.ts",
    "jest.setup.js",
    "jest.config.js",
    ".eslintrc.js",
    ".eslintrc.cjs",
    ".eslintrc.mjs"
  ],
  "compilerOptions": {
    "types": ["jest"],
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["src/tests/*"]
    },
    "strict": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "build",
    "@types",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.ts",
    "**/*.spec.ts",
    "*.d.ts",
    "**/static/**",
    "**/public/**",
    "**/*.min.js",
    "**/*.bundle.js"
  ]
}
