{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express", "cors", "jsonwebtoken", "jest"],
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["src/test/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts",
    "src/test/**/*.ts",
    "src/types/global.d.ts",
    "@types/**/*.d.ts",
    "jest.setup.ts",
    "jest.config.js"
, "@types/socket.d.ts.ts"  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    ".vscode",
    ".env",
    "**/*.test.js",
    "**/*.spec.js",
    "build",
    "*.mjs",
    "*.cjs",
    "build/"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
