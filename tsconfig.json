{
  "extends": "../tsconfig.base.json",
  "references": [
    { "path": "../shared" }
  ],
  "compilerOptions": {
    // ─── Overrides for the backend package ────────────────────────────────────
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // ─── Strictness & safety ───────────────────────────────────────────────────
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // ─── Unused code checks ────────────────────────────────────────────────────
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // ─── Path aliases ─────────────────────────────────────────────────────────
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["src/test/*"]
    },

    // ─── Type roots & only these types (no stray @types/date-fns) ────────────
    "typeRoots": [
  "../shared/types",
  "src/types",
    "node_modules/@types"
    ],
    "types": [
      "node",
      "express",
      "cors",
      "jsonwebtoken",
      "jest"
    ]
  },

  // ─── Files to include & exclude ────────────────────────────────────────────
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts",
    "src/test/**/*.ts",
    "jest.setup.ts",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    ".vscode",
    ".env",
    "**/*.test.js",
    "**/*.spec.js",
    "build",
    "*.mjs",
    "*.cjs"
  ],

  // ─── ts-node for local dev & testing ───────────────────────────────────────
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
